<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DaunSehat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/green</item>
    </style>

    <style name="Theme.DaunSehat" parent="Base.Theme.DaunSehat" />

    <style name="fab_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/light_brown</item>
    </style>

    <style name="RoundedBottomAppBar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextDisplayLarge">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">57sp</item>
        <item name="android:lineHeight">64sp</item>
    </style>
    <style name="TextDisplayMedium">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">45sp</item>
        <item name="android:lineHeight">52sp</item>
    </style>
    <style name="TextDisplaySmall">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">36sp</item>
        <item name="android:lineHeight">44sp</item>
    </style>

    <!-- Material Theme - Headline -->
    <style name="TextHeadlineLarge">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">40sp</item>
    </style>
    <style name="TextHeadlineMedium">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">36sp</item>
    </style>
    <style name="TextHeadlineSmall">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">32sp</item>
    </style>

    <!-- Material Theme - Title -->
    <style name="TextTitleLarge">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">28sp</item>
    </style>
    <style name="TextTitleMedium">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
    </style>
    <style name="TextTitleSmall">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <!-- Material Theme - Body -->
    <style name="TextBodyLarge">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
    </style>
    <style name="TextBodyMedium">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>
    <style name="TextBodySmall">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
    </style>

    <!-- Material Theme - Label -->
    <style name="TextLabelLarge">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>
    <style name="TextLabelMedium">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
    </style>
    <style name="TextLabelSmall">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">16sp</item>
    </style>
</resources>